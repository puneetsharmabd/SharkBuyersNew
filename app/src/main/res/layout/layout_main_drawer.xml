<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlue">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/layoutProfile"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                android:layout_margin="@dimen/_25sdp">

                <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:src="@color/ic_launcher_background"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/tvUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_17ssp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Jon den"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <TextView
                    android:id="@+id/tvUserOccupations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvUserName"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="@dimen/_17ssp"
                    android:layout_toRightOf="@+id/profile_image"
                    android:text="Employee"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_10ssp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutlist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layoutProfile"
                android:layout_margin="@dimen/_25sdp">

                <TextView
                    android:id="@+id/tvHome"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_10sdp"
                    android:text="Home"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:id="@+id/view1"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_below="@+id/tvHome"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvClients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view1"
                    android:padding="@dimen/_10sdp"
                    android:text="Clients"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:id="@+id/view2"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_below="@+id/tvClients"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view2"
                    android:padding="@dimen/_10sdp"
                    android:text="Profile"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:id="@+id/view3"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_below="@+id/tvProfile"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvReviewEmails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view3"
                    android:padding="@dimen/_10sdp"
                    android:text="Review Emails"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:id="@+id/view4"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_below="@+id/tvReviewEmails"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvBudgets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view4"
                    android:padding="@dimen/_10sdp"
                    android:text="Budgets"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:id="@+id/view5"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_below="@+id/tvBudgets"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvStore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view5"
                    android:padding="@dimen/_10sdp"
                    android:text="Store"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:id="@+id/view6"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_below="@+id/tvStore"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvReports"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view6"
                    android:padding="@dimen/_10sdp"
                    android:text="Reports"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:id="@+id/view7"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_below="@+id/tvReports"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view7"
                    android:padding="@dimen/_10sdp"
                    android:text="Settings"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:id="@+id/view8"
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"
                    android:layout_below="@+id/tvSettings"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@android:color/white" />

                <TextView
                    android:id="@+id/tvLogout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view8"
                    android:padding="@dimen/_10sdp"
                    android:text="Logout"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/_14ssp" />

            

            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>
  

</RelativeLayout>
